<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" >
    <item android:state_pressed="true" >
        <shape android:shape="rectangle"  >
            <corners android:radius="3dip" />
            <stroke android:width="1dip" android:color="#01579B" />
            <gradient android:angle="-90" android:startColor="#01579B" android:endColor="#0277BD" />
        </shape>
    </item>
    <item android:state_focused="true">
        <shape android:shape="rectangle"  >
            <corners android:radius="3dip" />
            <stroke android:width="1dip" android:color="#01579B" />
            <solid android:color="#0277BD"/>
        </shape>
    </item>
    <item >
        <shape android:shape="rectangle"  >
            <corners android:radius="3dip" />
            <stroke android:width="1dip" android:color="#01579B" />
            <gradient android:angle="-90" android:startColor="#0277BD" android:endColor="#01579B" />
        </shape>
    </item>
</selector>

