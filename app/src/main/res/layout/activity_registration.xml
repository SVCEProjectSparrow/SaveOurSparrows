<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bgsnowwhite"
    tools:context=".RegistrationActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <android.support.v7.widget.CardView
                android:id="@+id/card"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="15dp"
                android:visibility="gone"
                android:background="@color/bgsnowwhite"
                app:cardCornerRadius="4dp"
                app:cardElevation="@dimen/_10sdp">

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:padding="@dimen/activity_horizontal_margin">




                    <de.hdodenhof.circleimageview.CircleImageView
                        android:id="@+id/profimage"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:elevation="2dp"
                        android:padding="30dp"
                        android:layout_gravity="center_horizontal"
                        android:src="@drawable/ic_account_circle_black_200dp"
                        tools:ignore="ContentDescription" />




                    <EditText
                        android:id="@+id/name"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="10dp"
                        android:background="@color/bgsnowwhite"
                        android:drawableRight="@drawable/ic_star_black_24dp"
                        android:hint="@string/hint_name"
                        android:inputType="textPersonName"
                        android:padding="10dp"
                        android:textColor="@android:color/black"
                        android:textColorHint="@color/btn_grey5"
                        android:textSize="18sp"
                        />

                    <EditText
                        android:id="@+id/user"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="10dp"
                        android:background="@color/bgsnowwhite"
                        android:drawableRight="@drawable/ic_star_black_24dp"
                        android:hint="@string/hint_username"
                        android:inputType="textEmailAddress"
                        android:padding="10dp"
                        android:textColor="@android:color/black"
                        android:textColorHint="@color/btn_grey5" />

                    <EditText
                        android:id="@+id/pass"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:drawableRight="@drawable/ic_star_black_24dp"
                        android:layout_margin="10dp"
                        android:layout_weight="1"
                        android:background="@color/bgsnowwhite"
                        android:hint="@string/hint_password"
                        android:inputType="textPassword"
                        android:padding="10dp"
                        android:textColor="@android:color/black"
                        android:textColorHint="@color/btn_grey5" />

                    <EditText
                        android:id="@+id/cpass"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:drawableRight="@drawable/ic_star_black_24dp"
                        android:layout_margin="10dp"
                        android:background="@color/bgsnowwhite"
                        android:hint="@string/hint_cpassword"
                        android:inputType="textPassword"
                        android:padding="10dp"
                        android:textColor="@android:color/black"
                        android:textColorHint="@color/btn_grey5" />

                    <EditText
                        android:id="@+id/mobno"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:drawableRight="@drawable/ic_star_black_24dp"
                        android:layout_margin="10dp"
                        android:background="@color/bgsnowwhite"
                        android:hint="@string/hint_mobile"
                        android:inputType="number"
                        android:maxLength="10"
                        android:padding="10dp"
                        android:textColor="@android:color/black"
                        android:textColorHint="@color/btn_grey5" />


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="10dp"
                        android:layout_weight="2"
                        android:background="@color/bgsnowwhite"
                        android:orientation="horizontal"
                        android:padding="10dp">

                        <TextView
                            android:id="@+id/gendertext"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_marginRight="10dp"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:text="@string/lbl_gender"
                            android:textColor="@color/btn_grey5"
                            android:textSize="18sp" />

                        <RadioGroup
                            android:id="@+id/gendergroup"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10dp"
                            android:layout_weight="1"
                            android:orientation="vertical"
                            tools:ignore="RtlHardcoded">

                            <RadioButton
                                android:id="@+id/male"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="5dp"
                                android:layout_weight="1"
                                android:buttonTint="@color/colorPrimaryDark"
                                android:checked="true"
                                android:text="Male"
                                android:textColor="@color/colorAccent"
                                android:textSize="18sp"
                                tools:ignore="HardcodedText" />

                            <RadioButton
                                android:id="@+id/female"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="5dp"
                                android:layout_weight="1"
                                android:buttonTint="@color/colorPrimaryDark"
                                android:text="Female"
                                android:textColor="@color/colorAccent"
                                android:textSize="18sp"
                                tools:ignore="HardcodedText" />

                            <RadioButton
                                android:id="@+id/transgender"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="5dp"
                                android:layout_weight="1"
                                android:buttonTint="@color/colorPrimaryDark"
                                android:text="Transgender"
                                android:textColor="@color/colorAccent"
                                android:textSize="18sp"
                                tools:ignore="HardcodedText" />
                        </RadioGroup>
                    </LinearLayout>


                    <TextView
                        android:id="@+id/dobtxt"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:drawableRight="@drawable/ic_star_black_24dp"
                        android:layout_margin="10dp"
                        android:background="@color/bgsnowwhite"
                        android:hint="Date of Birth"
                        android:padding="10dp"
                        android:textColor="@android:color/black"
                        android:textColorHint="@color/btn_grey5"
                        android:textSize="18sp" />


                    <EditText
                        android:id="@+id/city"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:drawableRight="@drawable/ic_star_black_24dp"
                        android:layout_margin="10dp"
                        android:background="@color/bgsnowwhite"
                        android:hint="@string/hint_city"
                        android:inputType="textPersonName"
                        android:padding="10dp"
                        android:textColor="@android:color/black"
                        android:textColorHint="@color/btn_grey5" />

                    <EditText
                        android:id="@+id/district"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:drawableRight="@drawable/ic_star_black_24dp"
                        android:layout_margin="10dp"
                        android:background="@color/bgsnowwhite"
                        android:hint="@string/hint_district"
                        android:inputType="textPersonName"
                        android:padding="10dp"
                        android:textColor="@android:color/black"
                        android:textColorHint="@color/btn_grey5" />

                    <EditText
                        android:id="@+id/state"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:drawableRight="@drawable/ic_star_black_24dp"
                        android:layout_margin="10dp"
                        android:background="@color/bgsnowwhite"
                        android:hint="@string/hint_state"
                        android:inputType="textPersonName"
                        android:padding="10dp"
                        android:textColor="@android:color/black"
                        android:textColorHint="@color/btn_grey5" />


                    <Button
                        android:id="@+id/regbtn"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="20dp"
                        android:layout_marginTop="10dip"
                        android:background="@drawable/background"
                        android:text="@string/btn_register"
                        android:textColor="@color/white"
                        android:textSize="15dp"
                        tools:ignore="SpUsage" />
                </LinearLayout>
            </android.support.v7.widget.CardView>
        </LinearLayout>
    </ScrollView>
</RelativeLayout>



